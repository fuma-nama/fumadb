{
  "name": "fumadb",
  "description": "A library for interacting with different databases for your package.",
  "version": "0.0.2",
  "repository": "github:fuma-nama/fumadb",
  "author": "Fuma Nama",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./query": {
      "import": "./dist/query/index.js",
      "types": "./dist/query/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema/index.js",
      "types": "./dist/schema/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    },
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.9",
    "@prisma/client": "6.11.1",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "24.0.10",
    "@types/pg": "^8.15.4",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "mongodb": "^6.17.0",
    "mysql2": "^3.14.1",
    "pg": "^8.16.3",
    "prisma": "^6.11.1",
    "tinyexec": "^1.0.1",
    "tsup": "^8.5.0",
    "typeorm": "^0.3.25",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.44.0",
    "mongodb": "6.x.x",
    "prisma": "6.x.x",
    "typeorm": "0.x.x"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    },
    "prisma": {
      "optional": true
    },
    "typeorm": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "commander": "^14.0.0",
    "kysely": "^0.28.2",
    "kysely-typeorm": "^0.3.0",
    "zod": "^3.25.75"
  }
}
