model users {
  id String @map("_id") @id @default(cuid())
  name String
  email String
  image String? @default("my-avatar")
  account accounts @relation("account_fk", fields: [id], references: [id], onUpdate: Restrict, onDelete: Restrict)
  posts posts[] @relation("author_fk")
}

model accounts {
  id String @map("_id") @id
  user users? @relation("account_fk")
}

model posts {
  id String @map("_id") @id @default(cuid())
  authorId String @map("author_id")
  content String
  image Bytes?
  author users @relation("author_fk", fields: [authorId], references: [id], onUpdate: Restrict, onDelete: Restrict)
}
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}