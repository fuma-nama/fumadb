model users {
  id String @db.VarChar(255) @id @default(cuid())
  name String @db.VarChar(255)
  email String @db.VarChar(255)
  image String? @db.VarChar(200) @default("my-avatar")
  account accounts @relation("account_fk", fields: [id], references: [id], onUpdate: Restrict, onDelete: Restrict)
  posts posts[] @relation("author_fk")
}

model accounts {
  id String @db.VarChar(255) @id
  user users? @relation("account_fk")
}

model posts {
  id String @db.VarChar(255) @id @default(cuid())
  authorId String @map("author_id") @db.VarChar(255)
  content String
  image Bytes?
  author users @relation("author_fk", fields: [authorId], references: [id], onUpdate: Restrict, onDelete: Restrict)
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}